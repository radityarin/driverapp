<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.driverapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.project.driverapp.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.KeberlanjutanUMKMBSC">
        <activity
            android:name="com.project.driverapp.presentation.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.driverapp.presentation.home.users.ui.home.submit.SubmitActivity"
            android:exported="false" />
        <activity
            android:name="com.project.driverapp.presentation.home.users.UserMainActivity"
            android:exported="false"
            android:label="@string/title_activity_user_main" />
        <activity
            android:name="com.project.driverapp.presentation.register.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.KeberlanjutanUMKMBSCWhite" />
        <activity
            android:name="com.project.driverapp.presentation.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KeberlanjutanUMKMBSCWhite" />
        <activity
            android:name="com.project.driverapp.presentation.landing.LandingActivity"
            android:exported="true"
            android:theme="@style/Theme.KeberlanjutanUMKMBSCWhite" />
    </application>

</manifest>