<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin_32"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/layout_margin_16"
        android:background="@drawable/ic_close" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_popup_confirmation" />

    <TextView
        style="@style/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_margin_8"
        android:text="Konfirmasi" />

    <TextView
        style="@style/medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/layout_margin_16"
        android:layout_marginTop="@dimen/layout_margin_8"
        android:text="Apakah kamu yakin dengan perubahan\ndata yang kamu isikan? "
        android:textAlignment="center"
        android:textColor="@color/gray_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_32"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/layout_margin_16">

        <TextView
            android:id="@+id/tvOk"
            style="@style/primaryButtonsDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/layout_margin_4"
            android:layout_weight="1"
            android:text="Iya"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/tvCancel"
            style="@style/redButtonsDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/layout_margin_4"
            android:layout_weight="1"
            android:text="Tidak"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>
